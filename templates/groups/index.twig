{% extends "layout.main.twig" %}

{% block content %}

<h2>Groups</h3>

<a href="/admin/groups/create" class="btn btn-success">
  <span class="glyphicon glyphicon-plus"></span> Add Group
</a>

<table class="table table-striped">
  <thead>
    <th>Name</th>
    <th>Key</th>
    <th>Description</th>
    <th>Created</th>
  </thead>
  <tbody>
    {% for group in groups %}
    <tr>
      <td>{{ group.name }}</td>
      <td>{{ group.key }}</td>
      <td>{{ group.description }}</td>
      <td>{{ group.createDate }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
