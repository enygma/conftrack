<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>SITE TITLE HERE</title>

    <!-- Bootstrap -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <script src="/assets/js/jquery-1.11.3.min.js"></script>
    <script src="/assets/js/underscore-min.js"></script>
    <script src="/assets/js/backbone-min.js"></script>
    <script src="/assets/js/handlebars-v4.0.4.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/require.js"></script>
    <script src="/assets/js/site.js"></script>

    <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">SITE NAME</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
              <li class="active"><a href="/">Home</a></li>
            {% if not user %}
              <li><a href="/user/login">Login</a></li>
            {% else %}
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                  aria-haspopup="true" aria-expanded="false">Events <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="/event/create">Create</a></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                  aria-haspopup="true" aria-expanded="false">Sponsor <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="/sponsor/create">Create</a></li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                  aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="/admin/users">Users</a></li>
                </ul>
              </li>
            {% endif %}
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container" style="margin-top:60px">
    {% if error_messages %}
      {% for type, message in error_messages %}
        {% for msg in message %}
          <div class="alert alert-{{ type }}">{{ msg|nl2br }}</div>
        {% endfor %}
      {% endfor %}
    {% endif %}

    {% if user %}
      Logged in as <a href="/profile/view" style="font-weight:bold">{{ user.username }}</a> (<a href="/user/logout">log out</a>)
    {% endif %}

		{% block content %}{% endblock %}
	</div>
  <br/>
	</body>
</html>
