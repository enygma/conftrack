{% extends "layout.main.twig" %}

{% block content %}

<h2>{{ sponsor.name }}</h2>
<p>
  {{ sponsor.description }}
</p>
<hr/>

<h4>Users</h4>
<table class="table table-striped">
<thead>
  <th>Username</th>
  <th>Full Name</th>
</thead>
<tbody>
  {% for user in users %}
  <tr>
    <td><a href="/user/view/{{ user.id }}">{{ user.username }}</a></td>
    <td>{{ user.fullName }}</td>
  </tr>
  {% endfor %}
</tbody>
</table>

{% endblock %}
